<%= render 'components/notice_alert' %>

<%= flash[:error] %>

<%= render 'components/ingredient_error_msg_alert' %>

<h1>Cocktail List</h1>
<p>There are <%= Cocktail.count %> cocktails to choose from:</p>

<%#= link_to '+ New cocktail', new_cocktail_path, class: 'btn btn-primary mb-3' %>

<%= render 'components/new_cocktail_dropdown' %>

<%= render 'components/cocktail_accordion' %>



<% %w[warning success danger].each do |type| %>
  <% if flash[type].present? %>
    <div class="alert alert-<%= type %>">
      <%= flash[type] %>
    </div>
  <% end %>
<% end %>


